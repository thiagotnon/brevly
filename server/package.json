{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch --env-file .env.local src/infra/http/server.ts",
    "test": "dotenv -e .env.test -- vitest run",
    "db:up:dev": "docker compose --env-file .env.local -f docker-compose.dev.yml up -d",
    "db:down:dev": "docker compose --env-file .env.local -f docker-compose.dev.yml down",
    "test:watch": "dotenv -e .env.test -- vitest watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:dev": "dotenv -e .env.local -- drizzle-kit migrate",
    "db:generate:dev": "dotenv -e .env.local -- drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:studio:test": "dotenv -e .env.test -- drizzle-kit studio",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "pretest": "pnpm run db:migrate:test",
    "pretest:watch": "pnpm run db:migrate:test",
    "build": "tsup-node",
    "start": "node dist/infra/http/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.812.0",
    "@aws-sdk/lib-storage": "^3.812.0",
    "@faker-js/faker": "^9.8.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.2",
    "csv-stringify": "^6.5.2",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.43.1",
    "fastify": "^5.3.2",
    "fastify-type-provider-zod": "^4.0.2",
    "postgres": "^3.4.5",
    "uuidv7": "^1.0.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.17",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  }
}
